<ul class="list-group list-dossiers w-90 list-group-flush all-dossiers" >
    <a href="{{ path('app_dossiers_edit', {'id': this.dossier.id}) }}"  data-turbo-prefetch="true" data-turbo-stream class="  mt-3 mb-3 card dossier-item d-flex flex-row w-100 justify-content-between text-white" style="text-decoration: none; border: 1px solid white; padding: 0.5rem 0 0.5rem 0.1rem;">
        <div style="margin: 0.4rem;" id="Bravo2">
            <p><i class="fas fa-folder"></i> Nom du dossier : {{ this.dossier.nom }} &nbsp; <i class="far fa-calendar-alt"></i> Date de tir : {{ this.dossier.dateTir ? this.dossier.dateTir|date('d-m-Y') : '' }}</p>

            <p><i class="fas fa-fire"></i> Type de feu : {{ this.dossier.typeFeu }}</p>

     {% if this.dossier.nomVrp is not empty %}
    <p><i class="bi bi-person"></i> VRP :  {{ this.dossier.nomVrp }}</p>
{% else %}
    <p>L'utilisateur a été supprimé ou n'existe pas en base de données.</p>
{% endif %}

        </div>

        {% set bgColorClass = this.dossier.statut.couleur %}
        <span class="d-flex justify-content-center align-items-center text-center spanDate {% if this.dossier.statut.id %} bg-{{ this.dossier.statut.id }} {{ this.dossier.statut.libelle | replace({' ': ''}) }}{% endif %}"style="background-color:{{ bgColorClass }}"> 
            <p class="mb-0" style="width: max-content;margin-top: auto;"> Date de création  : <span class="dateCreation">{{ this.dossier.dateCreation ? this.dossier.dateCreation|date('d/m/Y H:i:s'): '' }}</span></p>
        </span>
    </a>
</ul>

