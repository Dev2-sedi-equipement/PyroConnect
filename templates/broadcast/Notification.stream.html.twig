{# Learn how to use Turbo Streams: https://github.com/symfony/ux-turbo#broadcast-doctrine-entities-update #}
{% block create %}
<turbo-stream action="append" target="notifications">
    <template>
        <div id="{{ 'notifications_' ~ id }}">
            #{{ id }} created
        </div>
    </template>
</turbo-stream>
{% endblock %}

{% block update %}
<turbo-stream action="update" target="notifications_{{ id }}">
    <template>
        #{{ id }} updated
    </template>
</turbo-stream>
{% endblock %}

{% block remove %}

<turbo-stream action="replace" target="notification_{{ id }}}">
    <template>
        {{ include('notification/success.stream.html.twig', {
            Notification: entity,
            isRemoved: true
        }) }}
    </template>
</turbo-stream>

{% endblock %}
